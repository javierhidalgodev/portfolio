---
import JavierHidalgoLogo from './JavierHidalgoLogo.astro'
import ThemeSelector from './ThemeSelector.astro'
---

<nav id="navbar" class='w-full fixed p-[12px] text-[var(--primary)] sm:text-[var(--secondary)] bg-[var(--secondary)] sm:bg-neutral-200 sm:bg-opacity-30 sm:backdrop-blur-md sm:border-b sm:border-zinc-700 z-20'>
  <div class="mx-auto max-w-[900px] w-full flex justify-between sm:justify-center items-center flex-wrap">
    <span class='sm:hidden block text-2xl font-bold'>
      <a href="#main-section" class="p-2 block">
        javier<span class="text-[var(--accent-color-variant)]">hidalgo</span>
      </a>
    </span>
    <div class="right-mobile-navbar flex">
      <div class="inline-flex sm:hidden">
        <ThemeSelector />
      </div>
      <button id="menu-hamburger-btn" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm rounded-lg sm:hidden">
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
      </button>
    </div>
    <div id="menu-default" class='hidden sm:flex w-full sm:w-fit h-screen sm:h-fit p-4 sm:p-1.5 flex flex-col sm:flex-row justify-center items-center gap-0 sm:gap-3 sm:rounded-md text-3xl sm:text-base children-li:px-2 children-li:py-4 sm:children-li:py-0.5 children-li:rounded-md sm:hover:children-li:bg-[var(--accent-color)] sm:hover:children-li:text-[var(--accent-color-variant)] children-li:duration-150'>
      <a href='#main-section'>Inicio</a>
      <a href='#experience-section'>Experiencia</a>
      <a href='#projects-section' >Proyectos</a>
      <a href='mailto:francisco.hidalgo.nula@gmail.com' class=" sm:border-[1px] sm:border-[var(--accent-color)] sm:bg-[var(--accent-color-variant)] sm:text-[var(--accent-color)]">Contacto</a>
      <div class="hidden sm:inline-flex">
        <ThemeSelector />
      </div>
    </div>
  </div>
</nav>