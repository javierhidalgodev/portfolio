---
const {text, url, icon} = Astro.props
---

<a
  target="_blank"
  href={url}
  class="
    w-fit
    flex
    py-[4px]
    px-[14px]
    justify-center
    items-center
    gap-[5px]
    bg-white
    rounded-full
    text-base
    hover:scale-105
    hover:text-[#00271e]
    hover:bg-[#dbff00]
    text-black
    font-[700]
    duration-100">
    {
      icon
        ? <i class={`flex items-center fa-${icon.type} fa-${icon.uri} size-4 fa-sm`} />
        : null
    }
    {text}
</a>
