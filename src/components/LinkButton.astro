---
const {text, url, icon} = Astro.props
---

<a
  target="_blank"
  href={url}
  class="
    w-fit
    py-[4px]
    px-[14px]
    flex
    items-center
    justify-center
    gap-[5px]
    bg-white
    rounded-full
    text-base
    hover:scale-105
    hover:text-[#00271e]
    hover:bg-[#dbff00]
    text-black
    font-[700]
    duration-100">
      <slot />
      {text}
</a>
